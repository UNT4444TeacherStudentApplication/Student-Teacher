<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_courselandingpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="@android:color/holo_purple">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@android:color/background_light"
            android:paddingEnd="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingStart="0dp"
            android:padding="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText"
                android:layout_weight="1"
                android:textColor="?attr/actionMenuTextColor"
                android:textSize="18sp"
                android:text="Welcome, Student!"
                android:textAlignment="center" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/black"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.00"
            android:paddingTop="30dp"
            android:background="@color/colorPrimary">

            <TextView
                android:text="Enrolled Courses"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textAlignment="center"
                android:background="@color/colorPrimary" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:background="@android:color/darker_gray"
            android:layout_height="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_weight="0.07"
            android:background="@color/colorPrimary">

            <Button
                android:text="4444- Software Engineering"
                android:layout_width="260dp"
                android:layout_height="54dp"
                android:id="@+id/button2"
                style="@android:style/Widget.Material.Button.Inset"
                android:layout_weight="0.15" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/ic_popup_reminder"
                android:id="@+id/imageButton3"
                android:layout_weight="0.56"
                android:background="@android:color/transparent"
                style="@style/Widget.AppCompat.ImageButton" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_weight="0.01"
            android:background="@color/colorPrimary">

            <Button
                android:text="4115- Automata Theory"
                android:layout_width="260dp"
                android:layout_height="54dp"
                android:id="@+id/button3"
                android:layout_weight="0.26"
                style="@android:style/Widget.Material.Button.Inset" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/ic_popup_reminder"
                android:id="@+id/imageButton3"
                android:layout_weight="1"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@color/colorPrimary">

            <Button
                android:text="4190- Technical Editing"
                android:layout_width="260dp"
                android:layout_height="54dp"
                android:id="@+id/button4"
                android:layout_weight="0.27"
                style="@android:style/Widget.Material.Button.Inset" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/ic_popup_reminder"
                android:id="@+id/imageButton3"
                android:layout_weight="1"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@color/colorPrimary"
            android:weightSum="1">

            <Button
                android:text="Edit Courses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button3"
                android:layout_weight="0.08"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:gravity="top"
                android:minHeight="47dp"
                android:textSize="11sp"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:typeface="serif"
                android:textStyle="normal|bold" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:background="@android:color/darker_gray"
            android:layout_height="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <Button
                android:text="Add a Course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonaddcourse"
                android:layout_weight="0.60"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="75dp"
                android:layout_marginTop="10dp"
                style="@android:style/Widget.Material.Light.Button.Inset" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <Button
                android:text="Edit Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttoneditprofile"
                android:layout_weight="0.60"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="75dp"
                style="@android:style/Widget.Material.Button.Inset" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <Button
                android:text="Logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonlogout"
                android:layout_weight="0.60"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="75dp"
                style="@android:style/Widget.Material.Button.Inset" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="38dp"
                app:srcCompat="@mipmap/settings"
                android:id="@+id/imageView2"
                android:layout_marginTop="30dp" />

            <Button
                android:text="Settings"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:id="@+id/button5"
                android:layout_weight="0.38"
                android:layout_marginTop="30dp"
                android:layout_marginRight="250dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:textStyle="normal|bold"
                android:textAlignment="viewStart" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
